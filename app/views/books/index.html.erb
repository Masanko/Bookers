<body>
<h1>Books</h1>  

<% @books.each do |book| %>
<%= link_to book.title, "/books/#{book.id}" %> <%= link_to book.body, "/books/#{book.id}" %>
<%end%>
<h2>New Book</h2>
<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>
<h4></h4>
  <%= f.submit 'Create Bookers' %>

<%end%>

</body>